---
import MainHead from '../components/MainHead.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
---
<style lang="scss">
  .wrapper {
    padding: 1rem;
    max-width: 500px;
    margin: 0 auto;
    @media (min-width: 768px) {
      padding: 2rem;
      max-width: 1000px;
    }
  }

  main {
    margin: 4rem 0;
  }
</style>

<html lang="en">
  <head>
    <MainHead title="Oleksa Novyk: Web Developer 🐱‍💻" />
  </head>
  <body>
    <div class="wrapper">
      <Nav />
      <main>
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
